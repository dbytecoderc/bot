{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist/src",
    "rootDir": "./src",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true /* Disallow inconsistently-cased references to the same file. */
  },
  "lib": ["es2015"],
  "exclude": ["node_modules", "./src/test", "**/*.spec.ts"]
}